<style type="text/css" media="screen">

thead,
tfoot {
    background-color: #3f87a6;
    color: #fff;
}

tbody {
    background-color: #e4f0f5;
}

caption {
    padding: 10px;
    caption-side: bottom;
}

table {
    border-collapse: collapse;
    border: 2px solid rgb(200, 200, 200);
    letter-spacing: 1px;
    font-family: sans-serif;
    font-size: .8rem;
}

td,
th {
    border: 1px solid rgb(190, 190, 190);
    padding: 5px 10px;
}

td {
    text-align: center;
}

</style>

<p id="notice"><%= notice %></p>

<h1>Rutas Asignadas</h1>

<table>
  <thead>
    <tr>
      <th>Comienzo</th>
      <th>Final</th>
      <th>Tipo</th>
      <th>Carga Total</th>
      <th>Ciudades</th>
      <th>Vehiculo</th>
      <th>Conductor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resolved_routes.each do |route| %>
      <tr>
        <td><%= route.starts_at %></td>
        <td><%= route.ends_at %></td>
        <td><%= route.load_type %></td>
        <td><%= route.load_sum %></td>
        <td><%= route.cities %></td>
        <td><%= route.vehicle_id %></td>
        <td><%= route.driver_id %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

